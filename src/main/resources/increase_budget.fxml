<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="126.0" prefWidth="501.0" spacing="5.0">
         <children>
            <TextField fx:id="txtBudget" alignment="CENTER" prefHeight="31.0" prefWidth="411.0" promptText="Budget eingeben">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnAddToBudget" mnemonicParsing="false" onAction="#addToBudgetClicked" prefHeight="34.0" prefWidth="132.0" text="OK">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="statusLabel" textFill="RED" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
